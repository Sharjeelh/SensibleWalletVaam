<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/material_color_primary</item>
        <item name="colorAccent">@color/material_color_accent</item>
        <item name="colorPrimaryDark">@color/material_color_primary_dark</item>
        <item name="colorControlHighlight">@color/material_color_control_highlight</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">

    </style>

    <style name="AppTheme.Widget.Toolbar" parent="AppTheme">
        <item name="colorPrimary">@color/material_color_primary</item>
        <item name="colorAccent">@color/material_color_accent</item>
        <item name="android:textColorPrimary">@color/material_color_text_primary</item>
        <item name="android:textColorPrimaryInverse">@color/material_color_text_primary</item>
        <item name="android:textColorSecondary">@color/material_color_text_primary</item>
    </style>

    <style name="AppTheme.Widget.Toolbar.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.Widget.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="android:windowBackground">@color/md_white_1000</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>

    </style>

    <!-- +++++++++++++++++++++ Base Styles +++++++++++++++++++++ -->
    <style name="buttonstyle" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@color/material_color_accent</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">30sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttonstyle2" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:height">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textviewstyle1">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="signinstyle">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="appname">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="appnamesub">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="textviewstylebold">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">25sp</item>
    </style>
    <!-- EditText style -->
    <style name="CustomEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@color/md_white_1000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- ProgressBar style -->
    <style name="CustomProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_height">@dimen/progressbar_height</item>
        <item name="android:minHeight">@dimen/progressbar_height</item>
    </style>

    <!-- SeekBar style -->
    <style name="CustomSeekBar" parent="@android:style/Widget.SeekBar">
        <item name="android:maxHeight">@dimen/seekbar_height</item>
        <item name="android:minHeight">@dimen/seekbar_height</item>
    </style>


    <style name="TransparentProgressDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>