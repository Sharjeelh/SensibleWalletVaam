<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_white_1000">

    <include android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:textSize="26sp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:textStyle="normal"
        android:gravity="center"
        android:textColor="@color/material_color_primary"
        android:paddingBottom="@dimen/ten"
        android:visibility="gone"
        android:text="@string/screen_login_welcome_label" />

    <ScrollView android:id="@+id/scrollbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lay_above"
                android:orientation="vertical"
                android:paddingBottom="@dimen/ten"
                android:paddingLeft="@dimen/fifteen"
                android:paddingRight="@dimen/fifteen" >

                <!--<TextView-->
                <!--android:id="@+id/tv_singin"-->
                <!--style="@style/signinstyle"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_marginBottom="@dimen/five"-->
                <!--android:text="@string/tv_signup" />-->

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintAnimationEnabled="true"
                    android:layout_marginTop="24dp"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp">

                    <EditText
                        android:id="@+id/et_fname"
                        android:hint="@string/screen_register_hint_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="18sp"/>

                </android.support.design.widget.TextInputLayout>



                <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/one"-->
                <!--android:layout_marginLeft="@dimen/five"-->
                <!--android:layout_marginRight="@dimen/five"-->
                <!--android:background="@color/fontcolorlight" />-->

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintAnimationEnabled="true"
                    android:layout_marginTop="8dp"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp">

                    <EditText
                        android:id="@+id/et_lname"
                        android:hint="@string/screen_register_hint_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="18sp"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintAnimationEnabled="true"
                    android:layout_marginTop="8dp"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp">

                    <EditText
                        android:id="@+id/et_email"
                        android:hint="@string/screen_register_hint_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="18sp"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintAnimationEnabled="true"
                    android:layout_marginTop="8dp"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp">

                    <EditText
                        android:id="@+id/et_password"
                        android:hint="@string/screen_register_hint_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="18sp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintAnimationEnabled="true"
                    android:layout_marginTop="8dp"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp">

                    <EditText
                        android:id="@+id/et_repassword"
                        android:hint="@string/screen_register_hint_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"

                        android:singleLine="true"
                        android:textSize="18sp" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/screen_register_terms_agreement_label"
                    android:layout_marginTop="24dp"
                    android:textSize="13sp"/>

                <Button
                    android:id="@+id/btn_startearning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/material_color_accent"
                    android:text="@string/screen_register_button_start"
                    android:textColor="@color/md_white_1000"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:textSize="@dimen/btnlogin_textsize" />


            </LinearLayout>

    </ScrollView>

</LinearLayout>

