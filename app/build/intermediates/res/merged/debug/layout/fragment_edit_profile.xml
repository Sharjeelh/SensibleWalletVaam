<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="48dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintAnimationEnabled="true"
                android:layout_marginTop="8dp"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColorHint="@color/material_color_primary"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp">

                <EditText
                    android:id="@+id/edit_profile_invite_id"
                    android:hint="Your Invitation ID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="18sp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintAnimationEnabled="true"
                android:layout_marginTop="8dp"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColorHint="@color/material_color_primary"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp">

                <EditText
                    android:id="@+id/edit_profile_email"
                    android:hint="Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="18sp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintAnimationEnabled="true"
                android:layout_marginTop="8dp"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColorHint="@color/material_color_primary"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp">

                <EditText
                    android:id="@+id/edit_profile_paypal_email"
                    android:hint="PayPal Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textSize="18sp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintAnimationEnabled="true"
                android:layout_marginTop="8dp"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColorHint="@color/material_color_primary"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp">

                <EditText
                    android:id="@+id/edit_profile_first_name"
                    android:hint="First Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textSize="18sp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintAnimationEnabled="true"
                android:layout_marginTop="8dp"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColorHint="@color/material_color_primary"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp">

                <EditText
                    android:id="@+id/edit_profile_last_name"
                    android:hint="Last Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textSize="18sp"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:paddingLeft="@dimen/five"
            android:background="#ffffff"
            android:padding="@dimen/five" >

         
            <TextView
                android:id="@+id/txt_invitationbelowcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five"
                android:text="sdfs"
                android:textColor="#242424"
                android:visibility="gone"/>
        </RelativeLayout>

        <Button
            android:id="@+id/edit_profile_btn_cancel"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:background="@color/material_color_accent"
            android:text="Cancel"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textColor="@color/md_white_1000"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:textSize="@dimen/btnlogin_textsize" />

        <Button
            android:id="@+id/edit_profile_btn_submit"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:background="@color/material_color_primary"
            android:text="Submit"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textColor="@color/md_white_1000"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:textSize="@dimen/btnlogin_textsize" />

    </LinearLayout>

</ScrollView>